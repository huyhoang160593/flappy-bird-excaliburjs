{
  "name": "custom-excalibur-ts-vite",
  "version": "1.0.1",
  "description": "Excalibur TypeScript custom template for Vite with linting settings",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "start": "vite",
    "build": "tsc && vite build",
    "serve": "vite preview",
    "lint": "biome lint --apply ./src/*/*.ts && quick-lint-js --language typescript ./src/*/*.ts",
    "format": "biome format --write ./src/*/*.ts",
    "test": "npm run build && ex-test -d ./dist -t ./test/test.js"
  },
  "keywords": [
    "excalibur",
    "excaliburjs",
    "vite",
    "game-engine",
    "game-template"
  ],
  "author": "The 99's Puppycat",
  "license": "BSD-2-Clause",
  "homepage": "https://github.com/huyhoang160593/excalibur-template-ts-vite#readme",
  "devDependencies": {
    "@biomejs/biome": "^1.6.3",
    "excalibur": "0.29.1",
    "typescript": "5.4.3",
    "quick-lint-js": "3.2.0",
    "vite": "^5.2.6"
  },
  "dependencies": {
    "@excaliburjs/testing": "^0.25.0"
  }
}